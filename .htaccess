# Define o arquivo principal
DirectoryIndex upload.php

# Permite reescrita de URLs (opcional, se quiser rotas amig√°veis)
<IfModule mod_rewrite.c>
    RewriteEngine On
</IfModule>

# Permitir acesso a uploads e logs
<Directory "/var/www/html/uploads">
    Options Indexes FollowSymLinks
    AllowOverride None
    Require all granted
</Directory>

<Directory "/var/www/html/logs">
    Options Indexes FollowSymLinks
    AllowOverride None
    Require all granted
</Directory>
